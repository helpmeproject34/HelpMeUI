<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:background="@drawable/rectangle_box">

            <com.helpme.widgets.SAutoBgButton

                style="@style/HelperImages"
                android:background="@drawable/blood_donor"
                android:id="@+id/imageView1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.helpme.widgets.SAutoBgButton
                android:background="@drawable/carpenter"
                style="@style/HelperImages"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                 />
            <com.helpme.widgets.SAutoBgButton
                style="@style/HelperImages"
                android:background="@drawable/plumber"
                android:id="@+id/imageView3"
                android:layout_below="@+id/imageView1"
                />
            <com.helpme.widgets.SAutoBgButton
                style="@style/HelperImages"
                android:background="@drawable/electrician"
                android:id="@+id/imageView4"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentRight="true"

               />
            <com.helpme.widgets.SAutoBgButton
                android:background="@drawable/bike_rental"
                style="@style/HelperImages"
                android:id="@+id/imageView5"
                android:layout_below="@+id/imageView3"
                android:layout_alignParentLeft="true"
                />
            <com.helpme.widgets.SAutoBgButton
                android:background="@drawable/cleaner"
                style="@style/HelperImages"
                android:id="@+id/imageView6"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentRight="true"
                />
            <com.helpme.widgets.SAutoBgButton
                android:background="@drawable/painter"
                style="@style/HelperImages"
                android:id="@+id/imageView7"
                android:layout_below="@+id/imageView5"
                android:layout_alignParentLeft="true"
                />
            <com.helpme.widgets.SAutoBgButton
                android:background="@drawable/car_rental"
                style="@style/HelperImages"
                android:id="@+id/imageView8"
                android:layout_below="@+id/imageView6"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>

                    android:textColor="@color/colorPrimaryDark"
                    android:layout_column="2"
                    android:padding="5dp"

                    />
            </TableRow>
            <TableRow >
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textview_user_profile_6"
                    android:text="harinath001"
                    android:textColor="#000000"
                    android:layout_column="2"
                    android:padding="5dp"
                    />
            </TableRow>
            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_column="2"
                android:layout_marginLeft="55dp"
                />


            <TableRow android:layout_marginTop="10dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/password"
                    android:layout_column="1"
                    android:id="@+id/imageview_userprofile_55"
                    android:padding="2dp"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textview_user_profile_41"
                    android:text="Password"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_column="2"
                    android:padding="5dp"

                    />
                <com.helpme.widgets.SAutoBgButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/edit"
                    android:layout_column="4"
                    android:id="@+id/button_activity_user_profile_change_password"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textview_user_profile_31"
                    android:text="*********"
                    android:textColor="#000000"
                    android:layout_column="2"
                    android:padding="5dp"
                    />
            </TableRow>
            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_column="2"
                android:layout_marginLeft="55dp"
                />

        </TableLayout>
    </ScrollView>

    <com.helpme.widgets.SAutoBgButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Logout"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/button_activity_user_profile_logout"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>



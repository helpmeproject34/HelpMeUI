            android:layout_height="match_parent"
            android:id="@+id/table_layout_user_profile"
            android:stretchColumns="3">
            <TableRow android:layout_marginTop="10dp">

                <ImageView
                   android:layout_marginLeft="20dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/email"
                    android:layout_column="1"
                    android:id="@+id/imageview_userprofile_1"
                    android:padding="2dp"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textview_user_profile_1"
                    android:text="Email ID"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_column="2"
                    android:padding="5dp"
                    />
            </TableRow>
            <TableRow android:orientation="vertical">
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textview_user_profile_2"
                    android:text="harinath@gmail.com"
                    android:textColor="#000000"
                    android:layout_column="2"
                    android:padding="5dp"
                    />
            </TableRow>
            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                android:layout_column="2"
                android:layout_marginLeft="55dp"
                />


            <TableRow android:layout_marginTop="10dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/mobile"
                    android:layout_column="1"
                    android:id="@+id/imageview_userprofile_5"
                    android:padding="2dp"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textview_user_profile_4"
                    android:text="Mobile"
                    android:textColor="@color/colorPrimaryDark"

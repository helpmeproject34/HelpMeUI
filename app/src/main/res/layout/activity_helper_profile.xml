<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.helpme.profiles.Activity_helper_profile">

    <Switch
        style="@style/HelperProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable My Helper profile"
        android:id="@+id/switch1"
        android:checked="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView5" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/HelperProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:text="Working Name"
                android:id="@+id/textView14" />

            <EditText
                style="@style/HelperProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText" />

            <TextView
                style="@style/HelperProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mobile"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView15" />

            <EditText
                style="@style/HelperProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editText2" />

            <TextView
                style="@style/HelperProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Category"
                android:id="@+id/textView12" />

            <Spinner
                style="@style/SpinnerAppTheme"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_helper_profile"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                style="@style/HelperProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView13"
                android:textColor="@color/colorPrimaryDark"
                android:text="Your Current Location" />

            <com.helpme.widgets.SAutoBgButton
                style="@style/HelperProfile"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detect My location"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/button2" />

            <com.helpme.widgets.SAutoBgButton
                style="@style/HelperProfile"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change My Location"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/button3"
                android:enabled="false"/>
            <TextView
                style="@style/HelperProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Working Timings"
                android:id="@+id/textView19" />

            <LinearLayout

                android:orientation="horizontal"
                style="@style/HelperProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/linearlayout111" >


                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:textColor="#000000"
                    android:id="@+id/editText4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="AM :"
                    android:textColor="#000000"
                    android:id="@+id/textView16" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:textColor="#000000"
                    android:id="@+id/editText5" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="PM"
                android:id="@+id/textView18" />
            </LinearLayout>



            <TextView
                style="@style/HelperProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Working Days"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView17" />

            <CheckBox
                style="@style/HelperProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:layout_marginLeft="30dp"
                android:id="@+id/checkBox" />
            <CheckBox
                style="@style/HelperProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:layout_marginLeft="30dp"
                android:id="@+id/checkBox2" />
            <CheckBox
                style="@style/HelperProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Tuesday"
                android:id="@+id/checkBox3" />
            <CheckBox
                style="@style/HelperProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Wednesday"
                android:id="@+id/checkBox4" />
            <CheckBox
                style="@style/HelperProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Thursday"
                android:id="@+id/checkBox5" />
            <CheckBox
                style="@style/HelperProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Friday"
                android:id="@+id/checkBox6" />
            <CheckBox
                style="@style/HelperProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Saturday"
                android:id="@+id/checkBox7" />

            <com.helpme.widgets.SAutoBgButton
                style="@style/HelperProfile"
                android:textColor="#000000"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/button4" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
